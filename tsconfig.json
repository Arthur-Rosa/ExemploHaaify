{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  /* Include, os arquivos que vamos trabalhar com ts */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
